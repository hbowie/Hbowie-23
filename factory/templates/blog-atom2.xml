<?output "../../web/blog/atom2.xml"?>
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title>Herb Bowie's Blog</title>
	<subtitle>From the Desk of H. Bowie</subtitle>
	<link rel="alternate" type="text/html" href="https://hbowie.net/blog/"/>
	<link rel="self" type="application/atom+xml" href="https://hbowie.net/blog/atom2.xml"/>
	<id>https://hbowie.net/blog/atom2.xml</id>
	<updated>=$today&yyyy-MM-ddTHH:mm:ssz$=</updated>
	<rights>Creative Commons Attribution-ShareAlike 4.0 International</rights>
	<author>
		<name>Herb Bowie</name>
		<email>herb@hbowie.net</email>
		<uri>https://hbowie.net/</uri>
	</author>
<?set item-count = 0 ?>
<?nextrec?>
<?set item-count += 1 ?>
<?if =$item-count$= le 20 ?>
	<entry>
		<title>
<?if "=$class$=" eq finished ?>
			=$finished-work-slug&x$=
<?else?>
			=$title&x$=
<?endif?>
		</title>
	    <link rel="alternate" type="text/html" href="https://hbowie.net/blog/posts/=$title&f$=.html"/>
<?if "=$imagename$=" ?>
	  	<link rel="alternate" type="image/=$imagename&^x$=" href="https://hbowie.net/blog/images/=$image-name&f$="/>
<?endif?>
	  <id>https://hbowie.net/blog/posts/=$title&f$=</id>
	  <published>=$date&yyyy-MM-dd$=T12:00:00Z</published>
	  <updated>=$datemodified&yyyy-MM-ddTHH:mm:ssz$=</updated>
	  <content>
		  =$body&x$=
<?if =$rating$= ?>

		  rating: =$rating&^r0,1,&#9733;^$=
<?endif?>
<?if "=$link$=" ?>

		  related link: =$link$=
<?endif?>

		  =$tags&#-writings$=
	  </content>
	</entry>
<?endif?>
<?loop?>
</feed>
<!-- THE END -->